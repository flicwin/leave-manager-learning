@model leave_manager.Models.EditLeaveAllocationVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editing @Model.LeaveType.Name Leave allocation for @Model.Employee.FirstName</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{ 
                    var navTo = ("Details/" + Model.EmployeeId);
                }
                <input type="submit" value="Update" class="btn btn-outline-primary" />&nbsp;<a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.EmployeeId">Back</a>
            </div>
        </form>
    </div>
</div>

