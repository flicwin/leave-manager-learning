@model IEnumerable<leave_manager.Models.LeaveTypeVM>

@{
    ViewData["Title"] = "Leave Types";
}

<h1>Leave Types</h1>
<hr />
<p>
    <a class="btn btn-outline-success" asp-action="Create"> <i class="fa fa-plus-circle" aria-hidden="true"></i> New Type</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                Available Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td class="text-muted">
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>&nbsp;&nbsp;
                <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete the leave type, @item.Name?')"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{ 
<script>

</script>
}